---
import Layout from '../layouts/Layout.astro';
import HeroImage from '../../public/image/fond.webp';
import { Image } from 'astro:assets';
---
<Layout>
  <main class="relative min-h-screen flex items-center justify-center">
    <!-- background like other pages -->
    <Image src={HeroImage} alt="Fond" class="absolute inset-0 w-full h-full object-cover" priority />
    <div class="absolute inset-0 bg-black/40"></div>

    <div class="relative z-10 w-full max-w-xl px-6 py-12">
      <div class="card w-full bg-base-100/80 backdrop-blur-md shadow-2xl rounded-2xl">
        <div class="card-body p-8">
          <h1 class="text-3xl font-bold text-center mb-4">Connexion</h1>

          <form id="loginForm" class="space-y-4">
            <div>
              <label class="label"><span class="label-text">Email</span></label>
              <input id="email" name="email" type="email" placeholder="votre@email.com"
                     class="input input-bordered input-lg w-full" required />
            </div>

            <div>
              <label class="label"><span class="label-text">Mot de passe</span></label>
              <input id="password" name="password" type="password" placeholder="Mot de passe"
                     class="input input-bordered input-lg w-full" required />
            </div>

            <div class="mt-2">
              <button type="submit" class="btn btn-secondary btn-block">Se connecter</button>
            </div>

            <p id="msg" class="text-center text-sm mt-2"></p>

            <div class="my-4 border-t pt-4 space-y-3">
              <button id="googleLogin" type="button" class="btn btn-outline w-full">Se connecter avec Google</button>
            </div>

            <div class="text-center mt-2">
              <a class="link link-primary" href="/register">Pas encore de compte ? S'inscrire</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script type="module">
  // adapted from register page script — client PocketBase import and UX handling
  const msgEl = document.getElementById('msg');
  function setMsg(text = '', isError = true) {
    msgEl.textContent = text;
    msgEl.style.color = isError ? '#ef4444' : '#064e3b';
  }

  // dynamic import from public client lib (ensure public/lib/pb.js exists)
  let pb;
  try {
    ({ pb } = await import('/lib/pb.js'));
  } catch (err) {
    console.error('failed to load client pb lib', err);
    setMsg('Impossible de charger le client d\'authentification.', true);
  }

  const form = document.getElementById('loginForm');
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    setMsg('');
    const btn = form.querySelector('button[type="submit"]');
    btn.disabled = true;
    btn.classList.add('opacity-70');
    btn.textContent = 'Connexion…';

    const email = form.email.value.trim();
    const password = form.password.value;

    if (!email || !password) {
      setMsg('Email et mot de passe requis', true);
      btn.disabled = false;
      btn.classList.remove('opacity-70');
      btn.textContent = 'Se connecter';
      return;
    }

    try {
      await pb.collection('users').authWithPassword(email, password);

      // check verification flag on returned model if present
      if (pb.authStore && pb.authStore.model && pb.authStore.model.verified === false) {
        setMsg('Veuillez vérifier votre email avant de continuer.', true);
        btn.disabled = false;
        btn.classList.remove('opacity-70');
        btn.textContent = 'Se connecter';
        return;
      }

      setMsg('Connexion réussie. Redirection…', false);
      // small delay for UX then redirect
      setTimeout(() => window.location.href = '/students', 500);
    } catch (err) {
      console.error('login error', err);
      const message = err?.data?.message || err?.message || 'Échec de connexion';
      setMsg(message, true);
      btn.disabled = false;
      btn.classList.remove('opacity-70');
      btn.textContent = 'Se connecter';
    }
  });

  // OAuth button (Google) — uses client lib to start OAuth flow
  const googleBtn = document.getElementById('googleLogin');
  googleBtn?.addEventListener('click', async () => {
    setMsg('');
    try {
      await pb.collection('users').authWithOAuth2({ provider: 'google' });
      // PocketBase will redirect to provider and back
    } catch (err) {
      console.error('google oauth error', err);
      setMsg('Échec connexion Google', true);
    }
  });
</script> 

<style>
/* ensure card styling consistent with register page */
.card { border-radius: 1rem; }
</style>