---
import Layout from '../layouts/Layout.astro';
import HeroImage from '../../public/image/fond.webp';
import { Image } from 'astro:assets';
---
<Layout>
  <main class="relative min-h-screen flex items-center justify-center font-Manrope">
    <!-- background image like on other pages -->
    <Image
      src={HeroImage}
      alt="Fond"
      class="absolute inset-0 w-full h-full object-cover"
      priority
    />
    <div class="absolute inset-0 bg-black/40"></div>

    <!-- content (above background) -->
    <div class="relative z-10 w-full max-w-xl px-6 py-12">
      <div class="card w-full bg-base-100/80 backdrop-blur-md shadow-2xl rounded-2xl">
        <div class="card-body p-8">
          <h1 class="text-3xl font-bold text-center mb-4">S'inscrire</h1>

          <form id="registerForm" class="space-y-4 justify-items-center">
            <div class="grid grid-cols-1 md:grid-cols-1 gap-4">
              <div>
                <label class="label">
                  <span class="label-text">Email</span>
                </label>
                <input id="email" name="email" type="email" placeholder="votre email"
                      class="input input-bordered input-lg w-full" required />
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="label"><span class="label-text">Nom</span></label>
                  <input id="name" name="name" type="text" placeholder="Nom"
                        class="input input-bordered w-full" />
                </div>
                <div>
                  <label class="label"><span class="label-text">Prénom</span></label>
                  <input id="firstname" name="firstname" type="text" placeholder="Prénom"
                        class="input input-bordered w-full" />
                </div>
              </div>

              <div>
                <label class="label"><span class="label-text">Mot de passe</span></label>
                <input id="password" name="password" type="password" placeholder="Mot de passe"
                      class="input input-bordered input-lg w-full" required />
              </div>

              <div>
                <label class="label"><span class="label-text">Confirmer mot de passe</span></label>
                <input id="passwordConfirm" name="passwordConfirm" type="password" placeholder="Confirmez le mot de passe"
                      class="input input-bordered input-lg w-full" required />
              </div>
              <div  class="my-4 border-t pt-4 space-y-3">
                <button id="googleLogin" type="button" class="btn btn-outline w-full">Se connecter avec Google</button>
              </div>
            </div>

            <div class="mt-2">
              <button type="submit" class=" w-auto p-4 btn btn-secondary btn-block">S'inscrire</button>
            </div>

            <p id="msg" class="text-center text-sm mt-2"></p>

            <div class="text-center mt-4">
              <a class="link link-primary" href="/login">Déjà un compte ? Connectez‑vous</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script type="module">
  // client-side import from public/lib/pb.js (do not import ../utils/pb.js here)
  // const { pb } = await import('/lib/pb.js'); // client PocketBase (public lib)
  const form = document.getElementById("registerForm");
  form.onsubmit = async (e) => {
    e.preventDefault();
    const email = form.email.value;
    const password = form.password.value;
    const passwordConfirm = form.passwordConfirm.value;
    const name = form.firstname.value + form.name.value;

    try {
      console.log("Registering user:", email);
      const resp = await fetch('/js/register', { method: 'POST', 
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, name, password, passwordConfirm })
      }); // ensure logged out
      const user = await resp.json();
      console.log("User registered:", user);
      // await pb.collection("users").create({
      //   email,
      //   password,
      //   passwordConfirm
      // });
      // try { await pb.collection("users").requestVerification(email); } catch (_) {}
      document.getElementById("msg").textContent = "Inscription réussie, vérifiez vos emails";
      window.location.href = '/';
    } catch (err) {
      document.getElementById("msg").textContent = "Échec de l'inscription";
      console.error(err);
    }
  };
</script>
<style>
  /* keep card rounded like other pages */
  .card { border-radius: 1rem; }
</style>